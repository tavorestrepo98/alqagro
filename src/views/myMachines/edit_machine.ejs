<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include ('../partials/head.ejs') -%>
    <title>Alqagro</title>
</head>
<body>
    <%- include ('../partials/navigation.ejs') -%>

    <main class="container p-4">
    <%- include ('../partials/messages.ejs') -%>
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h3>Editar máquina</h3>
                </div>
                <div class="card-body">
                    <form action="/mymachines/edit/<%= machine._id %>?_method=PUT" method="POST">
                        <input type="hidden" name="_method" value="PUT">
                        <div class="form-group">
                            <input type="text" name="tipo" class="form-control" placeholder="Tipo"
                            value="<%= machine.tipo %>">
                        </div>
                        <div class="form-group">
                            <input type="text" name="ubicacion" class="form-control" placeholder="Ubicación"
                            value="<%= machine.ubicacion %>">
                        </div>
                        <div class="form-group">
                            <input type="text" name="valor" class="form-control" placeholder="Valor por hectarea"
                            value="<%= machine.valor %>">
                        </div>
                        <div class="form-group">
                            <label>Dispoible para: </label><br>
                            <div>
                            Arar <input type="checkbox" name="arar" value=true>
                            </div>
                            <div>
                            Rastrillar <input type="checkbox" name="rastrillar" value=true>
                            </div>
                            <div>
                            Fumigar <input type="checkbox" name="fumigar" value=true>
                            </div>
                            <div>
                            Nivelar <input type="checkbox" name="nivelar" value=true>
                            </div>
                            <div>
                            Sembrar <input type="checkbox" name="sembrar" value=true>
                            </div>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-primary btn-block btn-sm" type="submit">
                                Guardar
                            </button>
                        </div>                                
                    </form>
                </div>
            </div>
        </div>
    </div>

    </main>
    <%- include ('../partials/footer.ejs') -%>
</body>
</html>