<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include ('../partials/head.ejs') -%>
        <title>Alqagro</title>
</head>

<body>
    <%- include ('../partials/navigation.ejs') -%>

        <main class="container p-4">
            <%- include ('../partials/messages.ejs') -%>
                <% for(var i=0; i < errors.length; i++) { %>
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <%= errors[i].text %>
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                    </div>
                <% } %>

                <div class="col-md-6 mx-auto">
                    <div class="card">
                        <div class="card-header">
                            <h3>Agrega una máquina</h3>
                        </div>
                        <div class="card-body">
                            <form action="/mymachines/new_machine" method="POST" enctype="multipart/form-data">
                                <div class="form-group">
                                    <input type="text" name="tipo" class="form-control" placeholder="Tipo de máquina" autofocus>
                                </div>
                                <div class="form-group">
                                    <input type="text" name="ubicacion" class="form-control" placeholder="Ubicación">
                                </div>
                                <div class="form-group">
                                    <input type="number" name="valor" class="form-control" placeholder="Valor préstamo por hectarea">
                                </div>
                                <div class="form-group">
                                    <label>Dispoible para: </label><br>
                                    <div>
                                    Arar <input type="checkbox" name="arar" value=true>
                                    </div>
                                    <div>
                                    Rastrillar <input type="checkbox" name="rastrillar" value=true>
                                    </div>
                                    <div>
                                    Fumigar <input type="checkbox" name="fumigar" value=true>
                                    </div>
                                    <div>
                                    Nivelar <input type="checkbox" name="nivelar" value=true>
                                    </div>
                                    <div>
                                    Sembrar <input type="checkbox" name="sembrar" value=true>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <input type="file" name="image" id="myFile" class="form-control">
                                </div>
                                <div class="form-group">
                                    <button class="btn btn-primary btn-block" type="submit">
                                        Guardar
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
        </main>
        <%- include ('../partials/footer.ejs') -%>
</body>

</html>